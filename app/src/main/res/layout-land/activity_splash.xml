<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ashGreen"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="219dp"
        android:layout_height="61dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="382dp"
        android:layout_marginBottom="236dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="@string/vitaltracker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="121dp"
        android:layout_marginStart="178dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="423dp"
        android:layout_marginBottom="106dp"
        android:contentDescription="@string/splashlogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/app_logo" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="452dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="145dp"
        android:indeterminate="true"
        app:indicatorColor="@color/fawn"
        app:indicatorSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackThickness="20dp"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>