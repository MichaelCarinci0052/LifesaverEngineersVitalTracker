<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">  <!-- Center child views -->

    <!-- Display the User Account Name -->

    <!-- Container for GPS Fragment -->
    <TextView
        android:id="@+id/userAccountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default User"
        android:textSize="20sp" />

    <FrameLayout
        android:id="@+id/gpsContainer"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:background="@drawable/rectangular_shape"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Container for Vitals Fragment or other content -->
    <FrameLayout
        android:id="@+id/vitalsContainer"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:background="@drawable/rectangular_shape"
        android:layout_marginTop="8dp"/>

</LinearLayout>
